{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/tests/**/*",
    "**/__tests__/**/*"
  ]
}